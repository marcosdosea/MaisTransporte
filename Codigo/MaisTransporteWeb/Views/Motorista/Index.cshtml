@model IEnumerable<MaisTransporteWeb.Models.MotoristaViewModel>

@{
    ViewData["Title"] = "Dados do CRLV";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<h1> Dados do CRLV </h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroDocumento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataEmissao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Expeditor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroDocumento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataEmissao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Expeditor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

